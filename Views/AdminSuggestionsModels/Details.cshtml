@model College.Areas.Identity.Data.SuggestionsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<form method="post">
<div>
    <h4>SuggestionsModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-10">
            @Html.DisplayNameFor(model => model.SuggestionMessage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SuggestionMessage)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            
            @Html.DisplayFor(model => model.Status)
        </dd>
        @if(Model.Status == "Processing")
            {
                <dt class="col-sm-10">
                    <button class="btn btn-primary" type="submit">MARK AS SOLVING</button>
                </dt>
            }
            else if(Model.Status =="Acting on it")
            {
                <dt class="col-sm-10">
                    <button class="btn btn-primary" type="submit">MARK AS  RESOLVED</button>
                </dt>
            }
            
    </dl>
</div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
