@model IEnumerable<College.Areas.Identity.Data.DepartmentsModel>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Departments</h1>

<p>
    <a class="btn btn-outline-secondary" asp-action="Create">Add a department</a>
</p>


<div class="row">
    @foreach (var item in Model)
    {
        <div style="width:20rem;margin:30px 30px; padding:20px;" class="card col-md-4">
            <div class="card-body">
                <table style="margin-bottom:20px">
                    <tr>
                        <td><strong>Department Name:</strong></td>
                        <td>@item.DeptName</td>
                    </tr>
                    <tr>
                        <td><strong>Department Head:</strong></td>
                        <td>@item.DeptHead</td>
                    </tr>
                </table>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.DeptId">Edit</a>
            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.DeptId">Details</a>
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.DeptId">Delete</a>
            </div>
        </div>
    }
</div>
