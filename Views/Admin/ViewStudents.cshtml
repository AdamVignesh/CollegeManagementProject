@model IEnumerable<College.Areas.Identity.Data.StudentsModel>

@{
    ViewData["Title"] = "ViewStudents";
}

<h1>All Students</h1>
<br />

<div class="row">
@foreach (var item in ViewBag.studentsList) {
            <div style="width:15rem;margin:30px 30px" class="card col-md-4">
                <img style="width:100px" src="@item.ImageURL" class="card-img-top rounded-top" alt="profile picture">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
            <p class="card-text">@item.department_id.DeptName</p>
                <p class="card-text">Year : @item.YearOfStudy</p>
                <p class="card-text">@item.Email</p>

                </div>
            <a class="btn btn-outline-primary" asp-action="Edit" asp-controller="StudentsModels" asp-route-id="@item.RegNo">Edit</a> 
            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.RegNo">Details</a> 
            </div>
}
</div>

