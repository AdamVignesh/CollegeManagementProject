@model College.Areas.Identity.Data.StudentsModel

@{
    ViewData["Title"] = "Create";
}

<h1>You are new here!</h1>
<p>Kindly enroll yourself as a student</p>

<h4>StudentsModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
@*            @if (ViewData["imgsrc"] != null)
            {
                <img src=@ViewData["imgsrc"] />
            }*@
            <div class="form-group">
                <label for="file">Upload Your Photo</label>
                <input type="file" id="file" name="file"><br><br>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SchoolName" class="control-label"></label>
                <input asp-for="SchoolName" class="form-control" />
                <span asp-validation-for="SchoolName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Percentage12th" class="control-label"></label>
                <input asp-for="Percentage12th" class="form-control" />
                <span asp-validation-for="Percentage12th" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Percentage10th" class="control-label"></label>
                <input asp-for="Percentage10th" class="form-control" />
                <span asp-validation-for="Percentage10th" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfStudy" class="control-label"></label>
                <input asp-for="YearOfStudy" class="form-control" />
                <span asp-validation-for="YearOfStudy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="department_id" class="control-label">Department</label>
                <select asp-for="department_id" name="department">
                @foreach (var departmentName in ViewBag.DepartmentNames)
                {
                    <option value="@departmentName.DeptId">@departmentName.DeptName</option>
                }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
