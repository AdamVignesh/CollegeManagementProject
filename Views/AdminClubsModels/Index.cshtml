@model IEnumerable<College.Areas.Identity.Data.ClubsModel>

@{
    ViewData["Title"] = "Index";
}

<h1>List of clubs</h1>

<p>
    <a asp-action="Create">Add a Club</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClubName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClubDescription)
            </th>
            <th>
                Club Profile
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClubName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClubDescription)
            </td>
            <td>
            <img style=" width:80px; border-radius: 50%;" src=@item.ClubImageURL alt="club profile"/>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClubId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClubId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClubId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
