@model College.Areas.Identity.Data.ClubsModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClubId" />
            <div class="form-group">
                <label asp-for="ClubName" class="control-label"></label>
                <input asp-for="ClubName" class="form-control" />
                <span asp-validation-for="ClubName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClubDescription" class="control-label"></label>
                <input asp-for="ClubDescription" class="form-control" />
                <span asp-validation-for="ClubDescription" class="text-danger"></span>
            </div>
            
             <div class="form-group">
                <label for="file">Upload Club Photo</label>
                <input type="file" id="file" name="file"><br><br>
            </div>
            <input type="hidden" asp-for="ClubImageURL" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
